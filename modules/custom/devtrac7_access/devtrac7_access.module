function devtrac7_access_node_update($node) {
  if ($node->type == 'fieldtrip' || $node->type == 'ftritem' ) {
    if (!isset($node->oldstatus)) {
      return;
    }
    switch($node->type) {
      case 'fieldtrip':
        $status_field = 'field_fieldtrip_status';
        $user_field = 'field_fieldtrip_user';
        $revoke_update = 'devtrac7_access_fieldtrip_revoke_update';
        $grant_update = 'devtrac7_access_fieldtrip_grant_update';
        $publish_access = 'devtrac7_access_fieldtrip_publish';
        $named_type = 'Field Trip';
        break;
      case 'ftritem':
        $status_field = 'field_ftritem_status';
        $user_field = 'field_ftritem_user';
        $revoke_update = 'devtrac7_access_ftritem_revoke_update';
        $grant_update = 'devtrac7_access_ftritem_grant_update';
        $publish_access = 'devtrac7_access_ftritem_publish';
        $named_type = 'Field Trip Report Item';
        break;
    }
//    drupal_set_message('Status was '. $node->oldstatus);
    $status = $node->{$status_field}['und'][0]['value'];
    if ($node->oldstatus != $status) {
//      drupal_set_message('Status changed to '. $status);
      $owner = user_load($node->uid);
      if (isset($node->{$user_field}['und'][0]['target_id'])) {
        $localuser = user_load($node->{$user_field}['und'][0]['target_id']);
      }
      if (isset($localuser->field_user_superior['und'][0]['target_id'])) {
        $manager = user_load($localuser->field_user_superior['und'][0]['target_id']);
      }
      module_load_include('inc', 'content_access', 'content_access.rules');
      switch ($status) {
        case 'In Progress':
          if (isset($manager)) {
            $revoke_update($node, $manager);
          }
          if (isset($localuser)) {
            $grant_update($node, $localuser);
          }
          $grant_update($node, $owner);
          drupal_set_message(t($named_type . " is editable."));
          break;
        case 'Submitted':
          // if (isset($localuser)) {
            // devtrac7_access_fieldtrip_revoke_update($node, $localuser);
          // }
          if (isset($manager)) {
            // devtrac7_access_fieldtrip_revoke_update($node, $owner);
            $grant_update($node, $manager);
          }
          drupal_set_message(t($named_type . " submitted for approval."));
          break;
        case 'Approved':
          if (isset($manager)) {
            $revoke_update($node, $manager);
          }
          if (isset($localuser)) {
            $revoke_update($node, $localuser);
          }
          $revoke_update($node, $owner);
          // drupal_set_message(t("Field Trip approved for publishing."));
          break;
      }
    }
    $status = $node->{$status_field}['und'][0]['value'];
//    drupal_set_message('Status changed to '. $status);
    if ($node->oldstatus != $status) {
      switch ($status) {
        case 'In Progress':
          break;
        case 'Submitted':
          break;
        case 'Approved':
          $publish_access($node);
          drupal_set_message(t($named_type . " Published."));
          break;
      }
    }
    unset($node->oldstatus);
  }

  if ($node->type == 'actionitem') {
    // Revoke old access rights
    if (isset($node->original->field_actionitem_responsible['und']) && (count($node->original->field_actionitem_responsible['und']) > 0)) {
      foreach ($node->field_actionitem_responsible['und'] as $responsible) {
        $localuser = user_load($responsible['target_id']);
        if (isset($localuser)) {
          devtrac7_access_actionitem_revoke_update($node, $localuser, 'insert');
        }
      }
    }
    // Grant new access rights
    if (isset($node->field_actionitem_responsible['und']) && (count($node->field_actionitem_responsible['und']) > 0)) {
      foreach ($node->field_actionitem_responsible['und'] as $responsible) {
        $localuser = user_load($responsible['target_id']);
        if (isset($localuser)) {
          devtrac7_access_actionitem_grant_update($node, $localuser, 'insert');
        }
      }
    }
  }
}

