/**
 * This function promotes the Site Report to the frontpage.
 */
function devtrac7_ftritem_promote_to_frontpage($node) {
  $ftritem = node_load($node);
  $ftritem->promote = 1;
  node_save($ftritem);
  drupal_set_message('Site Report ' . $ftritem->title . 'was promoted to the frontpage.');
  drupal_goto('node/' . $node);
}

/**
 * This function checks if the Site Report can be promoted to the frontpage.
 * It returns TRUE if it does.
 * It returns FALSE if it doesn't.
 */
function devtrac7_ftritem_promote_to_frontpage_access($node) {
  if (module_exists('devtrac_frontpage_sitereports')) {
    // Allow user with uid 1 and all users with role "administrator".
    global $user;
    if (($user->uid == 1) || in_array('administrator', $user->roles) || in_array('devtrac admin', $user->roles)) {
      // Load the .inc file that implements devtrac7_ftritem_imagesset().
      module_load_include('inc', 'devtrac7', 'devtrac7_ftritem');
      $ftritem = node_load($node);
      // Only allow when there is at least one image on the Site Report.
      if (devtrac7_ftritem_imagesset($ftritem)) {
        // Only makes sense when the Site Report is not promoted yet.
        return !$ftritem->promote;
      }
    }
  }
  return FALSE;
}

/**
 * This function demotes the Site Report from the frontpage.
 */
function devtrac7_ftritem_demote_from_frontpage($node) {
  $ftritem = node_load($node);
  $ftritem->promote = 0;
  node_save($ftritem);
  drupal_set_message('Site Report ' . $ftritem->title . 'was demoted from the frontpage.');
  drupal_goto('node/' . $node);
}

/**
 * This function checks if the Site Report can be demoted from the frontpage.
 * It returns TRUE if it does.
 * It returns FALSE if it doesn't.
 */
function devtrac7_ftritem_demote_from_frontpage_access($node) {
  // Allow user with uid 1 and all users with role "administrator" or "devtrac admin".
  global $user;
  if (($user->uid == 1) || in_array('administrator', $user->roles) || in_array('devtrac admin', $user->roles)) {
    $ftritem = node_load($node);
    // Only makes sense when the Site Report is already promoted.
    return $ftritem->promote;
  }
  return FALSE;
}

/**
